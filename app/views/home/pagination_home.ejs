<!--pagination -->
<row style="text-align: center">

<!--   <div class="col-xs-2 col-sm-4 col-md-4 col-lg-4 ">
  </div> -->

  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 ">

    <!-- previous -->

    <ul id="pagination_previous_offers" class="pagination">
      <% if (pagination.previous != 0) { %>
        <li id="li_active_previous" >
          <a id="a_previous" href="/home?query=<%= query %>&page=<%= pagination.previous %>&order=<%= order %>" aria-label="Previous">
             <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
      <% } %>
     
    </ul>

    <!-- pagination pages number -->

    <% for(var i=pagination.from; i <= pagination.to; i++) { %>
      
      <ul id="pagination_numbers_offers" class="pagination">
        <% if (i == pagination.page) { %>
          <li class="active">
            <a id='a_pagination_<%= i %>' class='pagination_active' href="/home?query=<%= query %>&page=<%= i %>&order=<%= order %>"><span aria-hidden="false"><%= i %></span></a>
          </li>
        <% } else { %>
          <li>
            <a id='a_pagination_<%= i %>' class="pagination_disabled" href="/home?query=<%= query %>&page=<%= i %>&order=<%= order %>" ><span aria-hidden="true"><%= i %></span></a>
          </li>
        <% } %>

      </ul>

    <% } %>

      <!-- next -->

      <ul id="pagination_next_offers" class="pagination">
        <% if (pagination.next != 0) { %>
          <li id="li_active_next">
            <a id="a_next" href="/home?query=<%= query %>&page=<%= pagination.next %>&order=<%= order %>" aria-label="Next">
               <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
        <% } %>
       
      </ul>
  </div>

</row>