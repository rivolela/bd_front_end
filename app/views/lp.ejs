				    </div>
				    <div class="item">
				      <img class="img-responsive center-block"  src="img/lojas_colombo.png" alt="...">
				    </div>
				  </div>

				  <!-- Controls -->
				  <a class="left carousel-control" href="#carousel-lp" role="button" data-slide="prev">
				    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
				<!--     <span class="sr-only">Previous</span> -->
