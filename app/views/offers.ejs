<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= title %></title>
    <%- include('partials/head') %>
  </head>

  <body>

     <!-- Begin page content -->
    <div class="container-fluid">

        <%- include('offers/search_offers') %>

        <div class="container-fluid">

          <% if (typeof error != 'undefined') { %>

            <div class="alert alert-warning" role="alert">
              <%= message %>
            </div>   
            
          <% } else { %>  

            <%- include('offers/list_offers') %>

            <%- include('offers/pagination_offers') %>

          <% } %>

        </div>

    </div>

    <footer class="footer">
      <div class="panel-footer"><%- include('partials/footer') %></div>
    </footer>

    <script type="text/javascript" src="/js/offers.js"></script>

  </body>

</html>

