 <style type="text/css">
    /*  Extra small devices Phones (<768px)*/


  @media (max-width:450px) {

    .title_avaliacoes{
/*        width: 30%;*/
    }

    .table_avalicoes{
      padding-left: 20px;
      padding-right:10px;
      overflow-x: hidden;
    
    }
  }


  /*Small devices Tablets (≥768px)*/
  @media (min-width:450px) {
    .title_avaliacoes{
/*        width: 30%;
        margin-left: 0px;*/
    }

    .table_avalicoes{
/*      padding-left: 15px;
      padding-right:10px;
      overflow-x: hidden*/
      display: inline
    }
  }

