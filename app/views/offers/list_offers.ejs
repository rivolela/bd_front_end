  <% for(var i=0; i <offers.productItems.productItem.length; i++) { %>
  
    <% if (i % 2 == 0) { %>
    
      <row>
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 ">
           <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                <a href="#">
                  <img src="<%= offers.productItems.productItem[i].image.medium %>"  class="img-responsive center-block">
                </a>
            </div>
            <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
                <a href="#"><%= offers.productItems.productItem[i].name %></a>
                <br>
                <br>
                <p>
                <span class="input-group-btn ">
                 <!--  <button type="submit" class="btn btn-warning pull-right" type="button">
                    Ver Reviews
                  </button> -->
                  <a href="#" class="btn btn-warning pull-right btn_reviews">
                   <img src="img/comments.png"" class="pull-left"/>
