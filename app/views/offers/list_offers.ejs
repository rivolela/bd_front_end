  <% for(var i=0; i <offers.docs.length; i++) { %>
    
    <%# if ean exists %>

      <% if (i % 2 == 0) { %>
    
        <row>
          <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 ">
             <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                  <%# zanox offer two kinds of image size %>
                  <% if (offers.docs[i].image_medium) { %>
                    <a href='/reviews/ean/<%= offers.docs[i].ean %>/page/1'>
                      <img src="<%= offers.docs[i].image_medium %>"  class="img-responsive center-block">
                    </a>
                  <% } else { %> 
                    <a href='/reviews/ean/<%= offers.docs[i].ean %>/page/1'>
                      <img src="<%= offers.docs[i].image_large %>"  class="img-responsive center-block">
                    </a>
                  <% } %>
              </div>
              <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
                  <a href="/reviews/ean/<%= offers.docs[i].ean %>/page/1"><%= offers.docs[i].name %></a>
                   <h6><%= offers.docs[i].ean %></h6>
                  <h6><%= offers.docs[i].advertiser %></h6>
                  <br>
                  <br>
                  <p>
                  <span class="input-group-btn ">
                   <!--  <button type="submit" class="btn btn-warning pull-right" type="button">
                      Ver Reviews
                    </button> -->
                    <a href='/reviews/ean/<%= offers.docs[i].ean %>/page/1' class="btn btn-warning pull-right btn_reviews">
                     <img src="img/comments.png" class="pull-left"/>
                      Ver Reviews
                    </a>
                  </span>
                  <br>
                  <p>
              </div>
              <!-- It will set the height of the whole row based on the height of the tallest member of in thar row -->
              <div class="clearfix visible-md"></div>
          </div>

      <% } else { %>  
          
          <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 ">
             <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                <%# zanox offer two kinds of image size %>
                <% if (offers.docs[i].image_medium) { %>
                    <a href='/reviews/ean/<%= offers.docs[i].ean %>/page/1'>
                      <img src="<%= offers.docs[i].image_medium %>"  class="img-responsive center-block">
                    </a>
                <% } else { %> 
                    <a href='/reviews/ean/<%= offers.docs[i].ean %>/page/1'>
                      <img src="<%= offers.docs[i].image_large %>"  class="img-responsive center-block">
                    </a>
                <% } %>
            </div>
            <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
                <a href="/reviews/ean/<%= offers.docs[i].ean %>/page/1"><%= offers.docs[i].name  %></a>
                 <h6><%= offers.docs[i].ean %></h6>
                 <h6><%= offers.docs[i].advertiser %></h6>
                <br>
                <br>
                <p>
                  <span class="input-group-btn">
                    <!-- <button type="submit" class="btn btn-warning pull-right" type="button">
                      Ver Reviews
                    </button> -->
                    <a href='/reviews/ean/<%= offers.docs[i].ean %>/page/1' class="btn btn-warning pull-right btn_reviews">
                     <img src="img/comments.png"" class="pull-left"/>
                      Ver Reviews
                    </a>
                  </span>
                <p>
            </div>
            <!-- It will set the height of the whole row based on the height of the tallest member of in thar row -->
            <div class="clearfix visible-md"></div>
          </div>
        </row>

        <row>
           <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
              <br>
           </div>
        </row>
      <% } %>

  <% } %>







