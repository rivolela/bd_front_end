<!-- img product -->
<div class="col-xs-5 col-sm-4 col-md-3 col-lg-4">
    <a itemprop="url" href="/<%= query%>/<%= offer.product.nameURL%>?page=1">
      <img itemprop="image" src="<%= offer.product.image %>"  class="img-responsive ga_click_ver_reviews" >
    </a>
</div>

<!-- end img product -->

<!-- M O B I L E -->
<div class="col-xs-7 col-sm-8 col-md-7 col-lg-8 visible-xs visible-sm">
    <span itemscope itemtype="http://schema.org/Product">
        <!-- name offer -->
        <strong class="strong_name_offer ga_click_ver_reviews" >
          <a itemprop="url" href="/<%= query%>/<%= offer.product.nameURL%>?page=1">
            <span itemprop="name"><%= offer.product.name %></span>
          </a>
        </strong> 

        <p>

        <!-- brand -->
        <%- include('../brand/brand_name',{product:offer.product}); %>
    </span>
</div>

<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 visible-xs visible-sm">
    <div style="height: 10px"></div>
    <div class="pull-right">
      <%- include('../product/box_product_reviews',{product:offer.product}); %>
    </div>
</div>

<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 visible-xs visible-sm">
    <div style="height: 10px"></div> 
    <%- include('./box_prices_offer',{offer:offer}); %>
    <div style="height: 0px"></div> 
    <hr class="row hr_offer">    
</div>
<!-- E N D  M O B I L E -->


<!-- D E S K T O P  -->
<div class="col-xs-7 col-sm-8 col-md-9 col-lg-8 hidden-xs hidden-sm">    
  
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">  
    
    <span itemscope itemtype="http://schema.org/Product">
    
      <strong class="ga_click_ver_reviews" >
        <!-- name offer -->
        <a itemprop="url" href="/<%= query%>/<%= offer.product.nameURL%>?page=1">
          <span itemprop="name"><h4><%= offer.product.name %></h4></span>
        </a> 
        <!-- brand -->
        <%- include('../brand/brand_name',{product:offer.product}); %>
      </strong> 

      <div style="height: 15px"></div>
      
      <!-- product reviews and brand -->
      <span itemprop="aggregateRating" itemscope itemtype="http://schema.org/AggregateRating">
        <span class="google_info">
          <span itemprop="ratingValue">3</span>
          <span itemprop="reviewCount"><%= offer.product.totalReviews %></span>
        </span>
        <div class="pull-left">
          <%- include('../product/box_product_reviews',{offer:offer}); %>
        </div>
      </span>
    
      <div style="height: 20px"></div>
    
      <hr class="row hr_offer">

      <!--   <hr class="row"> -->
      <%- include('./box_prices_offer',{offer:offer}); %> 
      
     </span>

  </div>
</div>

