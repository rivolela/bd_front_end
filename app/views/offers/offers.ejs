<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= title %></title>
    <%- include('../partials/head') %>
      <style type="text/css">
        /*  Extra small devices Phones (<768px)*/
        @media (max-width:768px) {
          .navbar-nav {
            width: 100%;
            /*text-align: center;*/
          }
          
          .navbar-nav > li {
            float: none;
            display: inline-block;
          }

          .navbar-nav > li.navbar-right {
            float: right !important;
          }

          .brand_img{
            /* content:url('img/before_deciding_app.png');*/
            margin-bottom: -35px;
            padding: 10px 1px 4px 20px;
          }    

           .nav > li > a{
            position: relative;
            display: block;
            padding: 15px 1px 15px 10px;
          }
      }
      
      /*Small devices Tablets (≥768px)*/
      @media (min-width:768px) {
          .navbar-nav {
            width: 100%;
            /*text-align: center;*/
          }
          
          .navbar-nav > li {
            float: none;
            display: inline-block;
          }

          .navbar-nav > li.navbar-right {
            float: right !important;
          }

          .brand_img{
            /* content:url('img/before_deciding_app.png');*/
            margin-bottom: -35px
          }

          .nav > li > a{
            position: relative;
            display: block;
            padding: 15px 6px;
          }

          .input_search{
            width: 250px !important;
          }
      }
        
      /* Medium devices Desktops (≥992px) */
      @media (min-width:993px) {
          .input_search{
            width: 400px !important;
          }
      }

    </style>
  </head>

  <body>

    <!-- Begin page content -->
    <div class="container-fluid">

      <nav class="navbar navbar-default navbar-fixed-top" role="navigation" style="background-color: white">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle pull-left" data-toggle="collapse" data-target=".navbar-collapse" style="margin-left: 4px">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button> 
            <a class="navbar-brand brand_img visible-xs container-fluid" href="/offers">
            </a>  
          </div>

          <div class="navbar-collapse collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
            <!-- <li class="navbar-left"><a href="#">Left 1</a></li> 
            <li class="navbar-left"><a href="#">Left 2</a></li>  -->
            <li class="visible-xs">
                <li class="visible-xs"><a href="#">Action</a></li>
                <li class="visible-xs"><a href="#">Another action</a></li>
                <li class="visible-xs"><a href="#">Something else here</a></li>
                <li  class="divider visible-xs"></li>
                <li class="visible-xs"><a href="#">Separated link</a></li>
                <li class="divider visible-xs"></li>
                <li class="visible-xs"><a href="#">One more separated link</a></li>
            </li>
  
            <li>
              <div class="btn-group hidden-xs">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" style="margin-left: 5px;background-color: #f5f5f5;">
                  <span class="glyphicon glyphicon-align-justify"></span> 
                  <text>Categorias</text> 
                </button>
                <ul class="dropdown-menu" role="menu">
                  <li><a href="#">Action</a></li>
                  <li><a href="#">Another action</a></li>
                  <li><a href="#">Something else here</a></li>
                  <li class="divider"></li>
                  <li><a href="#">Separated link</a></li>
                </ul>
              </div>
            </li>
            <li class="hidden-xs">
              <a class="brand_bd brand_img container-fluid" href="/offers">
              </a>
            </li>
            <li class="hidden-xs"><%- include('./search_offers') %></li>
            <!--   <li class="navbar-right"><a href="#">Right 1</a></li>
            <li class="navbar-right"><a href="#">Right 2</a></li> -->
            </ul>
        </div>

        <div class="visible-xs">
          <%- include('./search_offers') %>
        </div>
           
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 div_slogan">
            <p class="text-muted"><%= slogan %></p>
        </div>

      </nav>
                    
      <% for(var i=0; i <offers.docs.length; i++) { %>
      
        <%# if ean exists %>

          <% if (i % 2 == 0) { %>
        
            <row>
            
            <%- include('./list_offers',{offer:offers.docs[i]}); %>

          <% } else { %>  
              
             <%- include('./list_offers',{offer:offers.docs[i]}); %>
             
            </row>

            <row>
               <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                  <br>
               </div>
            </row>
          <% } %>

      <% } %>

      <%- include('./pagination_offers') %>

    </div>

    <footer class="footer">
      <div class="panel-footer"><%- include('../partials/footer') %></div>
    </footer>

    <!-- JavaScript Section -->
    <script type="text/javascript" src="/js/offers.js"></script>

  </body>
  
</html>

