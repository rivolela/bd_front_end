<!-- total of reviews,  name prodduct-->
<div>
  <table id="tbl_box_reviews">
    <tbody>
      <tr>

        <!-- BD BOY HAPPY -->
        <td>
          <% if (product.countHappy  > 0) { %>
            <a itemprop="url" id="a_bd_boy_happy_icon" href="/<%= query %>/<%= product.nameURL%>?page=1&filter=1#ver_reviews"" data-toggle="tooltip" data-placement="bottom" data-html="true" title="<%- include('../partials/tool_tip_bd_boy_happy') %>" class="bd_boy_happy_tooltip ga_click_ler_reviews" >
              <% if ((filter == 1) || (filter == 0)){ %>
                <img itemprop="image" id="img_bd_boy_happy" class="img-responsive bd_boy_happy">
              <% } else { %>
                <img itemprop="image" id="img_bd_boy_happy" class="img-responsive bd_boy_happy_off">
              <% } %>
            </a>
          <% } else { %>
            <img id="img_bd_boy_happy" class="img-responsive bd_boy_happy bd_boy_happy_tooltip" data-toggle="tooltip" data-placement="bottom" data-html="true" title="<%- include('../partials/tool_tip_bd_boy_happy') %>">
          <% } %>
        </td>

        <td width="5px;"></td>

        <td>
          <% if (product.countHappy  > 0) { %>
            <a itemprop="url" id="counter_happy" href="/<%= query %>/<%= product.nameURL%>?page=1&filter=1#ver_reviews"" class="a_couter ga_click_ler_reviews">
              <text id="counter_happy">
                  <span>
                    <% if (product.countHappy  == 1) { %>
                      <%= product.countHappy %> avaliação
                    <% } else { %>
                      <%= product.countHappy %> avaliações
                    <% } %> 
                    </span>   
                </text>
              </a>
          <% } else { %>
            <text id="counter_happy">
              <span>0 avaliação</span>
            </text>
          <% } %> 
        </td>
        
        <td width="20px"></td>

        <!-- BD BOY SAD -->
        <td>
          <% if (product.countSad  > 0) { %>
            <a itemprop="url" id="a_bd_boy_sad_icon" href="/<%= query %>/<%= product.nameURL%>?page=1&filter=2#ver_reviews"" data-toggle="tooltip" data-placement="bottom" data-html="true" title="<%- include('../partials/tool_tip_bd_boy_sad') %>" class="bd_boy_sad_tooltip ga_click_ler_reviews">
              <% if ((filter == 2) || (filter == 0)) { %>
                <img itemprop="image" id="img_bd_boy_sad" class="img-responsive bd_boy_sad">
              <% } else { %>
                <img itemprop="image" id="img_bd_boy_sad" class="img-responsive bd_boy_sad_off">
              <% } %>
            </a>
          <% } else { %>
              <img itemprop="image" id="img_bd_boy_sad" class="img-responsive bd_boy_sad bd_boy_sad_tooltip" data-toggle="tooltip" data-placement="bottom" data-html="true" title="<%- include('../partials/tool_tip_bd_boy_sad') %>">
          <% } %>
        </td>

        <td width="5px;"></td>

        <td>
          <% if (product.countSad  > 0) { %>
            <a itemprop="url" id="counter_sad" href="/<%= query %>/<%= product.nameURL%>?page=1&filter=2#ver_reviews"" class="a_couter ga_click_ler_reviews">
              <text id="counter_sad">
                <span>
                  <% if (product.countSad  == 1) { %>
                    <%= product.countSad %> avaliação
                  <% } else { %>
                    <%= product.countSad %> avaliações
                  <% } %> 
                </span>
              </text>
            </a>
          <% } else { %>
            <text id="counter_sad">
              <span>0 avaliação</span>
            </text>
          <% } %>
        </td>
        <!-- END BD BOY SAD -->
      </tr>
    </tbody>
  </table>
</div>

 

