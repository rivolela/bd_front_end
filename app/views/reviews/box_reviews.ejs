<style type="text/css">
  /* nothing with screen size bigger than 768px */
  @media (max-width:768px) {


  }

  /*nothing with screen size smaller than 768px*/
  @media (min-width:768px) {


  }
</style>


<!-- total of reviews,  name prodduct-->
<div class="well well-sm">
    <row>
      <table id="tbl_box_reviews">
        <tbody>
          <tr>
            <td>
              <td class="title_avaliacoes">
                <h4><small>Total de Avaliações: </small></h4>
              </td>
            </td>
            <td width="5px;"></td>
            <td>
             <!-- total of reviews -->
              <h4>
                <% if (product.totalReviews == 1) { %>
                  <a id="a_total_reviews" href="/avaliacoes/<%= product.nameURL%>?page=1&filter=0" onclick="ga('send','event','reviews','click','all_reviews');">
                  <%= product.totalReviews %> 
                  </a> 
                <% } else { %>
                  <a id="a_total_reviews" href="/avaliacoes/<%= product.nameURL%>?page=1&filter=0" onclick="ga('send','event','reviews','click','all_reviews');">
                
                  <span class="label label-warning" style="color: black">  <%= product.totalReviews %>  </span>
                  </a> 
                <% } %>
              </h4>
            </td>

            <td width="25px;"></td>

            <!-- BD BOY HAPPY -->
            <td>
              <% if (product.countHappy  > 0) { %>
                <a id="a_bd_boy_happy_icon" href="/avaliacoes/<%= product.nameURL%>?page=1&filter=1" data-toggle="tooltip" data-placement="bottom" data-html="true" title="<%- include('../partials/tool_tip_bd_boy_happy') %>" class="bd_boy_happy_tooltip" onclick="ga('send','event','reviews','click','bd_boy_happy');">
                  <% if ((filter == 1) || (filter == 0)){ %>
                    <img id="img_bd_boy_happy" class="img-responsive bd_boy_happy">
                  <% } else { %>
                    <img id="img_bd_boy_happy" class="img-responsive bd_boy_happy_off">
                  <% } %>
                </a>
              <% } else { %>
                <img id="img_bd_boy_happy" class="img-responsive bd_boy_happy bd_boy_happy_tooltip" data-toggle="tooltip" data-placement="bottom" data-html="true" title="<%- include('../partials/tool_tip_bd_boy_happy') %>">
              <% } %>
            </td>

            <td width="5px;"></td>

            <td>
              <% if (product.countHappy  > 0) { %>
                <a id="counter_happy" href="/avaliacoes/<%= product.nameURL%>?page=1&filter=1" class="a_couter" onclick="ga('send','event','reviews','click','bd_boy_happy');">
                  <text id="counter_happy"><%= product.countHappy %></text>
                </a>
              <% } else { %>
                <text id="counter_happy"><%= product.countHappy %></text>
              <% } %>         
            </td>
            
            <td width="20px"></td>

            <!-- BD BOY SAD -->
            <td>
              <% if (product.countSad  > 0) { %>
                <a id="a_bd_boy_sad_icon" href="/avaliacoes/<%= product.nameURL%>?page=1&filter=2" data-toggle="tooltip" data-placement="bottom" data-html="true" title="<%- include('../partials/tool_tip_bd_boy_sad') %>" class="bd_boy_sad_tooltip" onclick="ga('send','event','reviews','click','bd_boy_sad');">
                  <% if ((filter == 2) || (filter == 0)) { %>
                    <img id="img_bd_boy_sad" class="img-responsive bd_boy_sad">
                  <% } else { %>
                    <img id="img_bd_boy_sad" class="img-responsive bd_boy_sad_off">
                  <% } %>
                </a>
              <% } else { %>
                  <img id="img_bd_boy_sad" class="img-responsive bd_boy_sad bd_boy_sad_tooltip" data-toggle="tooltip" data-placement="bottom" data-html="true" title="<%- include('../partials/tool_tip_bd_boy_sad') %>">
              <% } %>
            </td>

            <td width="5px;"></td>

            <td>
              <% if (product.countSad  > 0) { %>
                <a id="counter_sad" href="/avaliacoes/<%= product.nameURL%>?page=1&filter=2" class="a_couter" onclick="ga('send','event','reviews','click','bd_boy_sad');">
                  <text id="counter_sad"><%= product.countSad %></text>
                </a>
              <% } else { %>
                <text id="counter_sad"><%= product.countSad %></text>
              <% } %>
            </td>
            <!-- END BD BOY SAD -->
          </tr>
        </tbody>
      </table>
    </row>
</div>

 

