
 <!-- img offer -->
 <div class="col-xs-5 col-sm-4 col-md-3 col-lg-3">
      <img id="img_picture_offer" src="<%= product.image %>"  class="img-responsive" onclick="ga('send','event','reviews','click','foto_offer');">
</div>

<!-- total of reviews -->
<div class="col-xs-7 col-sm-8 col-md-9 col-lg-9">
    <strong id="name_offer"><%= product.name %></strong>
    <!-- total of reviews -->
    <h4>
      <form id="formGetReviews" action="/avaliacoes/<%= product.nameURL%>?page=1&filter=0" method="post">
        <input type="hidden" name="ean" value="<%= product.ean %>"/>
        <input type="hidden" name="nameurl" value="<%= product.nameURL %>"/>
      </form>
      <% if (product.totalReviews == 1) { %>
        <a id="a_total_reviews" href="javascript:;" onclick="document.getElementById('formGetReviews').submit();ga('send','event','reviews','click','all_reviews');">
        <%= product.totalReviews %> avaliação
        </a> 
      <% } else { %>
        <a id="a_total_reviews" href="javascript:;" onclick="document.getElementById('formGetReviews').submit();ga('send','event','reviews','click','all_reviews');">
        <%= product.totalReviews %> avaliações 
        </a> 
      <% } %>
    </h4>

    <br>

    <row>
       <table id="tbl_box_reviews">
        <tbody>
          <tr>
            <!-- BD BOY HAPPY -->
            <td>
              <% if (product.countHappy  > 0) { %>
                <form id="formGetReviewsHappy" action="/avaliacoes/<%= product.nameURL%>?page=1&filter=1" method="post">
                  <input type="hidden" name="ean" value="<%= product.ean %>"/>
                  <input type="hidden" name="nameurl" value="<%= product.nameURL %>"/>
                </form>
                <a id="a_bd_boy_happy_icon" href="javascript:;" data-toggle="tooltip" data-placement="bottom" data-html="true" title="<%- include('../partials/tool_tip_bd_boy_happy') %>" class="bd_boy_happy_tooltip" onclick="document.getElementById('formGetReviewsHappy').submit();ga('send','event','reviews','click','bd_boy_happy');">
                  <% if ((filter == 1) || (filter == 0)){ %>
                    <img id="img_bd_boy_happy" class="img-responsive bd_boy_happy">
                  <% } else { %>
                    <img id="img_bd_boy_happy" class="img-responsive bd_boy_happy_off">
                  <% } %>
                </a>
              <% } else { %>
                <img id="img_bd_boy_happy" class="img-responsive bd_boy_happy bd_boy_happy_tooltip" data-toggle="tooltip" data-placement="bottom" data-html="true" title="<%- include('../partials/tool_tip_bd_boy_happy') %>">
              <% } %>
            </td>

            <td width="5px;"></td>

            <td>
              <% if (product.countHappy  > 0) { %>
                <a id="counter_happy" href="javascript:;" class="a_couter" onclick="document.getElementById('formGetReviewsHappy').submit();ga('send','event','reviews','click','bd_boy_happy');">
                  <text id="counter_happy"><%= product.countHappy %></text>
                </a>
              <% } else { %>
                <text id="counter_happy"><%= product.countHappy %></text>
              <% } %>         
            </td>
            
            <td width="20px"></td>

            <!-- BD BOY SAD -->
            <td>
              <% if (product.countSad  > 0) { %>
                <form id="formGetReviewsSad" action="/avaliacoes/<%= product.nameURL%>?page=1&filter=2" method="post">
                  <input type="hidden" name="ean" value="<%= product.ean %>"/>
                  <input type="hidden" name="nameurl" value="<%= product.nameURL %>"/>
                </form>
                <a id="a_bd_boy_sad_icon" href="javascript:;" data-toggle="tooltip" data-placement="bottom" data-html="true" title="<%- include('../partials/tool_tip_bd_boy_sad') %>" class="bd_boy_sad_tooltip" onclick="document.getElementById('formGetReviewsSad').submit();ga('send','event','reviews','click','bd_boy_sad');">
                  <% if ((filter == 2) || (filter == 0)) { %>
                    <img id="img_bd_boy_sad" class="img-responsive bd_boy_sad">
                  <% } else { %>
                    <img id="img_bd_boy_sad" class="img-responsive bd_boy_sad_off">
                  <% } %>
                </a>
              <% } else { %>
                  <img id="img_bd_boy_sad" class="img-responsive bd_boy_sad bd_boy_sad_tooltip" data-toggle="tooltip" data-placement="bottom" data-html="true" title="<%- include('../partials/tool_tip_bd_boy_sad') %>">
              <% } %>
            </td>

            <td width="5px;"></td>

            <td>
              <% if (product.countSad  > 0) { %>
                <a id="counter_sad" href="javascript:;" class="a_couter" onclick="document.getElementById('formGetReviewsSad').submit();ga('send','event','reviews','click','bd_boy_sad');">
                  <text id="counter_sad"><%= product.countSad %></text>
                </a>
              <% } else { %>
                <text id="counter_sad"><%= product.countSad %></text>
              <% } %>
            </td>
            <!-- END BD BOY SAD -->
          </tr>
        </tbody>
      </table>
    </row>
</div>

<!-- It will set the height of the whole row based on the height of the tallest member of in thar row -->
<div class="clearfix visible-md"></div>


