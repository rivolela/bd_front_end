<style type="text/css">

	@import url('https://fonts.googleapis.com/css?family=Francois+One|Maven+Pro');

	.review_text{
		font-family:'Maven Pro', sans-serif;
		font-size: 15px;
	/*	font-style: italic*/
	}

	.reviewTextTitle{
		font-family:'Maven Pro', sans-serif;
		font-size: 15px;
		font-weight: bold;
	}
</style>

<span class="google_info" itemprop="reviewRating" itemscope itemtype="http://schema.org/Rating">
	<span itemprop="ratingValue">3</span>/
	 	<% if (product.ratingValue != undefined) { %>
	  	<span class="google_info">
	    	<meta itemprop="worstRating" content="<%= product.worstRating %>"/>
	    	<span itemprop="bestRating"><%= product.bestRating %></span>
	  	</span>
		<% } %>
	</span>
</span>

<% if (review.rating >= 4) { %>
  <img itemprop="image" id="bd_boy_review" class="img-responsive pull-left bd_boy_happy" style="width: 28px" ></img>
<% } else { %>  
  <img itemprop="image" id="bd_boy_review" class="img-responsive pull-left bd_boy_sad" style="width: 28px"></img>
<% } %> 

<text itemprop="name" id="review_title" class="reviewTextTitle">&nbsp;&nbsp;<%= review.title %></text>

<% if (review.rating >= 4) { %>
  <blockquote id="review_description" style="background-color: rgba(218, 250, 229, 0.21);margin-left: 35px;" class="review_text">
<% } else { %> 
  <blockquote id="review_description" style="background-color: rgba(246, 66, 78, 0.03);margin-left: 35px" class="review_text"> 
<% } %> 
  " <span itemprop="description"><%= review.description %></span>"
  <footer id="review_author">
    avaliado pelo usu√°rio(a) <span itemprop="author"><%= review.author %></span>
    <cite title="Source Title">no site <%= review.advertiser %></cite> em <%= review.dateBR %>

  </footer>
</blockquote>
<br>
    
   