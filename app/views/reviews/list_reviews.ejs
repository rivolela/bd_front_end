	@import url('https://fonts.googleapis.com/css?family=Space+Mono:400,400i,700,700i');

	.review_text{
		font-family: 'Space Mono', monospace;
		font-size: 16px;
	/*	font-style: italic*/
	}

	.reviewTextTitle{
		font-family: 'Space Mono', monospace;
		font-size: 16px;
		font-weight: bold;
	}
</style>

<% if (review.rating >= 4) { %>
  <img id="bd_boy_review" class="img-responsive pull-left bd_boy_happy" style="width: 28px" ></img>
<% } else { %>  
  <img id="bd_boy_review" class="img-responsive pull-left bd_boy_sad" style="width: 28px"></img>
<% } %> 

<text id="review_title" class="reviewTextTitle">&nbsp;&nbsp;<%= review.title %></text>

<% if (review.rating >= 4) { %>
  <blockquote id="review_description" style="background-color: rgba(218, 250, 229, 0.21);margin-left: 35px;" class="review_text">
<% } else { %> 
  <blockquote id="review_description" style="background-color: rgba(246, 66, 78, 0.03);margin-left: 35px" class="review_text"> 
<% } %> 
  "<%= review.description %>"
