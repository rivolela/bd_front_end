<!--pagination -->
<row>

<!--   <div class="col-xs-2 col-sm-4 col-md-4 col-lg-3 ">
  </div> -->

<!--   <div class="col-xs-10 col-sm-8 col-md-8 col-lg-8 "> -->

    <!-- previous -->

    <ul id="pagination_previous_reviews" class="pagination">
        <% if (pagination.previous != 0) { %>
          <form id="formPaginationOffer_previous" action="/avaliacoes/<%= product.nameURL%>?page=<%= pagination.previous %>&filter=<%= filter %>" method="post">
              <input type="hidden" name="ean" value="<%= product.ean %>"/>
              <input type="hidden" name="nameurl" value="<%= product.nameURL %>"/>
          </form>
          <li id="li_active_previous" >
            <a id="a_previous" href="javascript:;" aria-label="Previous" onclick="document.getElementById('formPaginationOffer_previous').submit();ga('send','event','reviews','click','pagination_reviews');">
               <span aria-hidden="true">&laquo;</span>
            </a>
          </li>
         <% } %>
    </ul>

    <!-- pagination pages number -->

    <% for(var i=pagination.from; i <= pagination.to; i++) { %>

      <ul id="pagination_numbers_reviews" class="pagination">

        <form id="formPaginationOffer_<%= i %>" action="/avaliacoes/<%= product.nameURL%>?page=<%= i %>&filter=<%= filter %>" method="post">
          <input type="hidden" name="ean" value="<%= product.ean %>"/>
          <input type="hidden" name="nameurl" value="<%= product.nameURL %>"/>
        </form>

        <% if (i == pagination.page) { %>
          <li class="active">
            <a id='a_pagination_<%= i %>' class='pagination_active' href="javascript:;" onclick="document.getElementById('formPaginationOffer_<%= i %>').submit();ga('send','event','reviews','click','pagination_reviews');"><span aria-hidden="false"><%= i %></span></a>
          </li>
        <% } else { %>
          <li>
            <a id='a_pagination_<%= i %>' class="pagination_disabled" href="javascript:;" onclick="document.getElementById('formPaginationOffer_<%= i %>').submit();ga('send','event','reviews','click','pagination_reviews');"><span aria-hidden="true"><%= i %></span></a>
          </li>
        <% } %>

      </ul>

    <% } %>

      <!-- next -->

      <ul id="pagination_next_reviews" class="pagination">
        <% if (pagination.next != 0) { %>
          <form id="formPaginationOffer_next" action="/avaliacoes/<%= product.nameURL%>?page=<%= pagination.next %>&filter=<%= filter %>" method="post">
            <input type="hidden" name="ean" value="<%= product.ean %>"/>
            <input type="hidden" name="nameurl" value="<%= product.nameURL %>"/>
          </form>
          <li id="li_active_next">
            <a id="a_next"  href="javascript:;" aria-label="Next" onclick="document.getElementById('formPaginationOffer_next').submit();ga('send','event','reviews','click','pagination_reviews');">
               <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
         <% } %>
      </ul>
<!--   </div> -->

</row>

