<style type="text/css">
    .ga_click_ler_reviews{

    }   
</style>
<row>

<!--   <div class="col-xs-2 col-sm-4 col-md-4 col-lg-3 ">
  </div> -->

<!--   <div class="col-xs-10 col-sm-8 col-md-8 col-lg-8 "> -->

    <!-- previous -->

    <ul id="pagination_previous_reviews" class="pagination">
        <% if (pagination.previous != 0) { %>
          <li id="li_active_previous" >
            <a id="a_previous" href="/<%= query%>/<%= product.nameURL%>?page=<%= pagination.previous %>&filter=<%= filter %>" aria-label="Previous" class="ga_click_ler_reviews">
               <span aria-hidden="true">&laquo;</span>
            </a>
          </li>
         <% } %>
    </ul>

    <!-- pagination pages number -->

    <% for(var i=pagination.from; i <= pagination.to; i++) { %>

      <ul id="pagination_numbers_reviews" class="pagination">

        <% if (i == pagination.page) { %>
          <li class="active">
            <a id='a_pagination_<%= i %>' class='pagination_active ga_click_ler_reviews' href="/<%= query%>/<%= product.nameURL%>?page=<%= i %>&filter=<%= filter %>"><span aria-hidden="false"><%= i %></span></a>
          </li>
        <% } else { %>
          <li>
            <a id='a_pagination_<%= i %>' class="pagination_disabled ga_click_ler_reviews" href="/<%= query%>/<%= product.nameURL%>?page=<%= i %>&filter=<%= filter %>" ><span aria-hidden="true"><%= i %></span></a>
          </li>
        <% } %>

      </ul>

    <% } %>

      <!-- next -->

      <ul id="pagination_next_reviews" class="pagination">
        <% if (pagination.next != 0) { %>
          <li id="li_active_next">
            <a id="a_next"  href="/<%= query%>/<%= product.nameURL%>?page=<%= pagination.next %>&filter=<%= filter %>" aria-label="Next" class="ga_click_ler_reviews">
               <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
         <% } %>
      </ul>
<!--   </div> -->

</row>

