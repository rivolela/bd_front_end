<!DOCTYPE html>
<html lang="pt">
  <head>
    <title><%= product.name %><%= title %></title>
    <link rel="alternate" href="http://www.decidaki.com.br/<%= query %>/<%= product.nameURL %>" hreflang="pt-br" />
    <meta name="description" content="Veja avaliações de <%= product.name %> no Decidaki, antes de decidir a sua compra." />
    <meta name="keywords" content=" avaliações, avaliações de <%= product.name %>, comparador de avalições, reviews, reviews de <%= product.name %>, comparador de <%= product.name %>, avaliações de e-commerce, decidaki"  />
    <link rel="canonical" href="http://www.decidaki.com.br/<%= query %>/<%= product.nameURL %>" />
    <%- include('../partials/head') %>

    <style type="text/css">

      @media (max-width:768px) {
        .div_img_product{
          text-align: center;
          margin-bottom: 15px;
          margin-top: 0px
        }

        .div_img_product > img{
          height: 150px;
        }
      }

      @media (min-width:768px) {
        .div_img_product{
         /* text-align: left;*/
         /* margin-top: -20px*/
        }

        .div_img_product > img{
         /* height: 300px;
          max-height: 300px;*/
          margin: 0px 0px 10px -40px;
        }
      }

      .panel_price{
        font-size: 15px;
        background-color: #f2f2f2;
      }
      
    </style> 
  </head>

  <body class="body_review">

    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-MV9HDK3"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->

    <!-- Begin page content -->
    <div class="container-fluid">

      <%- include('../partials/nav_head') %> 
          
      <div id="var_query" style="visibility: hidden;display: none;"><%= query %></div>
      
      <!-- 1st column >> -->
      <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8"> 

        <!-- BREADCRUMB -->
        <row>
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">   
            <%- include('./breadcrumb_reviews') %>
          </div>
        </row>

        <!-- HR -->
        <row>
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <%- include('../partials/hr') %>
          </div>
        </row>

        <!-- PRODUCT NAME -->
        <row>
        
         <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          
          <div class="col-xs-12 col-sm-3 col-md-4 col-lg-4 div_img_product">
            <img id="img_picture_offer" src="<%= product.image %>" class="img-responsive">
          </div>

          <div class="col-xs-12 col-sm-9 col-md-8 col-lg-8" >
            <%- include('../product/product_name',{offer:head_reviews}); %> 
            <%- include('./box_reviews',{offer:head_reviews}); %> 
            <p>
          </div>  

         </div>
        
    <!--     </row> -->

<!--         <div style="height:150px" class="hidden-xs"></div>
        <div style="height:90px" class="visible-xs"></div> -->
        
        <!-- PRODUCT IMAGEM -->
  <!--       <row> -->
         
        </row>

        <row class="hidden-xs">
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <h4 class="text-warning" style="margin-bottom: 20px!important;
margin-top: 30px">Avaliações</h4>
          </div>
        </row>

        <row>
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <%- include('../partials/hr') %>
          </div>
        </row>

        
        <!-- PRICES MOBILE -->
        <row>
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 hidden-md hidden-lg">
            <% if (offers.docs.length > 0) { %>
              <div class="panel-group panel_price" role="tablist">
                <div class="panel panel_price">
                  <div class="panel-heading" role="tab" id="collapseListGroupHeading1">
                    <h4 class="panel-title">
                      <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>&nbsp;&nbsp;Onde comprar
                    </h4>
                  </div>
                  <%- include('../offers/box_prices_offer',{offer:offers.docs[0]}); %> 
                  <div id="collapseListGroup1" class="panel-collapse collapse" role="tabpanel" aria-labelledby="collapseListGroupHeading1" aria-expanded="false" style="">
                    <% for(var i=1; i <offers.docs.length; i++) { %> 
                      <%- include('../offers/box_prices_offer',{offer:offers.docs[i]}); %>      
                    <% } %>
                  </div>
                </div>
                <div class="panel-footer" style="text-align: center;background-color: #bdbdbd;">
                  <a class="" data-toggle="collapse"  href="#collapseListGroup1" aria-expanded="false" aria-controls="collapseListGroup1">
                       mais ofertas
                  </a>
                </div>
              </div>
            <% } else { %>
            <% }  %>
          </div> 
        </row>

        <!-- LIST REVIEWS -->
        <row>
          <% for(var i=0; i <reviews.docs.length; i++) { %> 
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
              <%- include('./list_reviews',{review:reviews.docs[i]}); %>
            </div>
          <% }  %>     
        </row>
        
        <!-- PAGINATION REVIEWS -->
        <row>
           <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style=" text-align: center">
            <%- include('./pagination_reviews') %>
          </div>
        </row>
      </div>
      
      <!-- 2st column >> -->
      <!-- PRICES DESKTOP -->
      <!-- position: fixed;right: 0px;margin-top: 70px" -->
      <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 visible-md visible-lg" style="position: fixed;right: 0px;margin-top: 10px;z-index: 999px"> 
        <% if (offers.docs.length > 0) { %>
          <div class="panel panel_price">
            <div class="panel-heading">
              <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>&nbsp;&nbsp;<bold>Onde comprar</bold>
            </div>
              <% if (offers.docs.length == 1) { %>
                <%- include('../offers/box_prices_offer',{offer:offers.docs[0]}); %> 
              <% } else { %>
                <% for(var i=0; i <offers.docs.length; i++) { %> 
                  <%- include('../offers/box_prices_offer',{offer:offers.docs[i]}); %>      
                <% }  %>
              <% }  %>           
            </div>
          </div>
        <% } else { %>
        <% }  %>
      </div>
      
    </div>
    <!-- End page content -->
    
    <!-- FOOTER -->
    <footer class="footer">
      <div class="panel-footer"><%- include('../partials/footer') %></div>
    </footer>
    
    <!-- JavaScript Section -->
    <script type="text/javascript">
      $(document).ready(function(){
          $('a[data-toggle=tooltip]').tooltip();
         
      });
    </script>

  </body>

</html>
