<!DOCTYPE html>
<html lang="pt">
  <head>
    <title><%= title %></title>
    <link rel="alternate" href="http://www.beforedeciding.com.br" hreflang="pt-br" />
    <%- include('../partials/head') %> 
    <meta name="description" content="Veja avaliações de produtos no Before Deciding, antes de decidir a sua compra." />
    <meta name="keywords" content="avaliações, avaliações de produtos, before deciding, comparador de avalições, reviews, reviews de produtos, comparador de reviews, avaliações de e-commerce" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="canonical" href="http://www.beforedeciding.com.br" /> 

    <style type="text/css">
      /*  Extra small devices Phones (<768px)*/
      @media (max-width:768px) {
        .box_reviews{
          padding-left: 0px;
          padding-right: 0px;
        }
      }
      
      /*Small devices Tablets (≥768px)*/
      @media (min-width:768px) {

      }

    </style>  
  </head>

  <body style="">

    <!-- Begin page content -->
    <div class="container-fluid">

      <%- include('../partials/nav_head') %> 
    
      
      <div id="var_query" style="visibility: hidden;display: none;"><%= query %></div>

      <row>
        <!-- breadcrumb -->
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 visible-xs">   
           <%- include('./breadcrumb_search') %>
        </div>
      </row>

      <!-- hr -->
      <row>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 visible-xs">
          <%- include('../partials/hr') %>
        </div>
      </row>

       <row class="box_reviews">
        <!-- label order by -->
        <div class="col-xs-5 col-sm-1 col-md-2 col-lg-2 visible-xs"> 
          <label class="label_order">ordenar por:</label>
        </div>         
        <!-- reviews order -->
        <div class="col-xs-7 col-sm-11 col-md-3 col-lg-3 visible-xs">
          <%- include('../offers/mobile/order_offers_mobile') %> 
        </div>
      </row>
      

      <!-- desktop -->
      <row class="hidden-xs">
        <!-- search title -->
        <div class="col-xs-5 col-sm-7 col-md-7 col-lg-7">   
          <%- include('./breadcrumb_search') %>
        </div>
         <!-- label order by -->
        <div class="col-xs-* col-sm-2 col-md-2 col-lg-2 div_label_order"> 
          <label class="hidden-xs label_order">ordenar por:</label>
        </div>         
        <!-- reviews order -->
        <div class="col-xs-7 col-sm-3 col-md-3 col-lg-3">
           <%- include('../offers/order_offers') %> 
        </div>
      </row>

      <!-- hr -->
      <row>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <%- include('../partials/hr') %>
        </div>
      </row>
      
      
      <!-- list offers and box ver avalicoes -->   
      <% for(var i=0; i<offers.docs.length; i++) { %>
        <% if (offers.docs[i].product !== null) { %>
          <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 box_reviews"> 
            <!-- list offers + box avaliacoes > 768px (NEED REFACTORY / HMTL DUPLICATED - box_avaliacoes_mobile) */  -->  
            <%- include('../offers/list_offers',{offer:offers.docs[i],i:i}); %>
            <!-- Extra small devices Phones (<768px)* (NEED REFACTORY / HMTL DUPLICATED - box_avaliacoes_mobile)  -->
            <%- include('../offers/mobile/box_avaliacoes_mobile',{offer:offers.docs[i],i:i}); %>
          </div>
        <% } %>
      <% } %>
      <%- include('../offers/offers_pagination') %>

    
    </div>

    <footer class="footer">
      <div class="panel-footer"><%- include('../partials/footer') %></div>
    </footer>

  </body>

  <script type="text/javascript">
    $(function() {
      $('.box_reviews').matchHeight({
        // byRow: true,
        // property: 'height',
        // target: '.caption',
        // remove: false
      });
    });
  </script>
  
</html>

